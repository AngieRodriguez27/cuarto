package animales;

import javax.swing.JOptionPane;

public class Animales {
   protected int patas;
   protected String piel;
   protected String sangre;

    public Animales() {
    }
    public Animales (int patas,String piel,String sangre){
        this.patas = patas;
        this.piel = piel;
        this.sangre = sangre; 
    }
    public int getPatas() {
        return patas;
    }
    public void setPatas(int patas) {
        this.patas = patas;
    }
    public String getPiel() {
        return piel;
    }
    public void setPiel(String piel) {
        this.piel = piel;
    }
    public String getSangre() {
        return sangre;
    }
    public void setSangre(String sangre) {
        this.sangre = sangre;
    }
    public void imprimir(){
    String datosanimal = "";
    datosanimal = "numero de patas:  " + patas + "\n"
+ "recubrimiento de su piel: " + piel + "\n" +
"tipo de sangre (fria/caliente)" + sangre;
JOptionPane.showMessageDialog(null,datosanimal);
}
    
    
    }

  

